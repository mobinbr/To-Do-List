@model ToDoListViewModel

<section>
        <h1 class="head">To Do List</h1>
        <div class="tbl-header">
            <table cellpadding="0" cellspacing="0" border="0">
                <thead>
                    <tr>
                        <th scope="col">Task</th>
                        <th scope="col">Details</th>
                        <th scope="col">Due Date</th>
                    </tr>
                </thead>
            </table>
        </div>
        <div>
            <table cellpadding="0" cellspacing="0" border="0">
                <tbody>
                    @foreach (var t in Model.ToDoList)
                    {
                        <tr>
                            <th class="todos-column" scope="row">@t.ToDoItemsId</th>
                            <th class="todos-column">@t.Details</th>
                            <th class="todos-column">@t.DueTime</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    </div>
</div>
</section>